{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "types": ["@types/node", "@types/jest"],
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": false,
    "declaration": true,
    "paths": {
      "*": ["node_modules/*", "src/types"]
    },
    "baseUrl": "."
  },
  // "files": ["./src/*"],
  "include": [".", "./src/**/*"],
  "exclude": ["/node_modules/*", "coverage/*", "__tests__", "dist", "bable*", "jest*"]
}
